<?xml version="1.0" encoding="UTF-8"?>
<server>
	<vars>
		<item name="WEBROOT">/var/www/willemvanbeek.nl/www</item>
		<item name="TEMPLATES">/var/www/willemvanbeek.nl/www/templates</item>

			<!--database-->
		<item name="QUERY">SELECT src, thumb FROM gallery WHERE type = ?</item>
		<item name="VARS">src, thumb</item>
		<item name="TABLE">gallery</item>
		<item name="TYPE">type</item>
	</vars>
	<net>
		<address>localhost</address>
		<port>9000</port>
		<protocol>tcp</protocol>
	</net>

	<user>
		<page path="/">
			<name>Home</name>
			<title>Willem van Beek Beelden</title>

			<template outfile="%WEBROOT%/html/index">
				<file>%TEMPLATES%/header.html</file>
				<file>%TEMPLATES%/navbar.html</file>
				<file>%TEMPLATES%/index.html</file>
				<file>%TEMPLATES%/footer.html</file>
			</template>

		</page>

		<page path="/contact">
			<name>Contact</name>
			<title>Contact | Willem van Beek Beelden</title>

			<template outfile="%WEBROOT%/html/contact">
				<file>%TEMPLATES%/header.html</file>
				<file>%TEMPLATES%/navbar.html</file>
				<file>%TEMPLATES%/contact.html</file>
				<file>%TEMPLATES%/footer.html</file>
			</template>
		</page>

		<page path="/beelden/steen">
			<name>Beelden van steen</name>
			<title>Steen | Willem van Beek Beelden</title>

			<db query="SELECT %VARS% FROM %TABLE% WHERE %TYPE% = steen" />

			<template outfile="%WEBROOT%/html/beelden/steen">
				<file>%TEMPLATES%/header.html</file>
				<file>%TEMPLATES%/navbar.html</file>
				<file>%TEMPLATES%/beelden.html</file>
				<file>%TEMPLATES%/footer.html</file>
			</template>
		</page>

		<page path="/beelden/hout">
			<name>Beelden van  hout</name>
			<title>Hout | Willem van Beek Beelden</title>

			<db query="SELECT %VARS% FROM %TABLE% WHERE %TYPE% = hout" />

			<template outfile="%WEBROOT%/html/beelden/hout">
				<file>%TEMPLATES%/header.html</file>
				<file>%TEMPLATES%/navbar.html</file>
				<file>%TEMPLATES%/beelden.html</file>
				<file>%TEMPLATES%/footer.html</file>
			</template>
		</page>

		<page path="/beelden/metaal">
			<name>Beelden van metaal</name>
			<title>Metaal | Willem van Beek Beelden</title>

			<db query="SELECT %VARS% FROM %TABLE% WHERE %TYPE% = metaal" />

			<template outfile="%WEBROOT%/html/beelden/metaal">
				<file>%TEMPLATES%/header.html</file>
				<file>%TEMPLATES%/navbar.html</file>
				<file>%TEMPLATES%/beelden.html</file>
				<file>%TEMPLATES%/footer.html</file>
			</template>
		</page>
	</user>
</server>

