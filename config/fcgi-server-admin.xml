<?xml version="1.0" encoding="UTF-8"?>
<server>
	<net>
		<address>localhost</address>
		<port>9001</port>
		<protocol>tcp</protocol>
	</net>
	<system>
		<root>/var/www/willemvanbeek.nl/admin</root>
		<templates>
			<!--location of template files-->
			<path>/var/www/willemvanbeek.nl/admin/templates</path>
			<execinterval>10m</execinterval>
		</templates>
	</system>
	<page uri="/login">
		<name>Login</name>
		<title>Login</title>

		<template outfile="login">
			<file id="header">%templates%/header.html</file>
			<file id="navbar">%templates%/navbar.html</file>
			<file id="content">%templates%/admin/login.html</file>
			<file id="foorter">%templates%/footer.html</file>
		</template>

	</page>

	<page uri="/">
		<name>Index</index>
		<title>Admin</title>

		<template>
			<file id="header">%templates%/header.html</file>
			<file id="navbar">%templates%/navbar.html</file>
			<file id="content">%templates%/admin/index.html</file>
			<file id="foorter">%templates%/footer.html</file>
		</template>
	</page>

	<page uri="/toevoegen">
		<name>Toevoegen</name>
		<title>Admin</title>

		<template>
			<file id="header">%templates%/header.html</file>
			<file id="navbar">%templates%/navbar.html</file>
			<file id="content">%templates%/admin/add.html</file>
			<file id="foorter">%templates%/footer.html</file>
		</template>
	</page>

	<page uri="/verwijderen">
		<name>Verwijderen</name>
		<title>Admin</title>

		<template>
			<file id="header">%templates%/header.html</file>
			<file id="navbar">%templates%/navbar.html</file>
			<file id="content">%templates%/admin/remove.html</file>
			<file id="foorter">%templates%/footer.html</file>
		</template>
	</page>
</server>
