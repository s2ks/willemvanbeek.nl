<?xml version="1.0" encoding="UTF-8"?>
<net>
	<address>localhost</address>
	<port>9000</port>
	<protocol>tcp</protocol>
</net>
<system>
	<webroot>/var/www/html/</webroot>
	<template>
		<path>/var/www/template/</path> <!-- location of template files -->
		<execinterval>10m</execinterval>
	</template>
</system>
<page path="/">
	<name>Home</name>
	<title>Willem van Beek Beelden</title>

	<template outfile="index"> <!-- relative to system/webroot -->
		<file id="header">header.html</file> <!-- relative to system/template/path -->
		<file id="navbar">navbar.html</file>
		<file id="content">index.html</file>
		<file id="foorter">footer.html</file>
	</template>

</page>

<page path="/contact">
	<name>Contact</name>
